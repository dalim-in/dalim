{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "registry:build": {
      "cache": false,
      "outputs": []
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_APP_URL",
    "AUTH_SECRET",
    "NEXTAUTH_URL",
    "DALIM_URL",
    "UI_URL",
    "AGENCY_URL",
    "WORKS_URL",
    "LEARN_URL",
    "RESEND_EMAIL_FROM",
    "VERIFICATION_URL",
    "VERIFICATION_SUBJECT",
    "DATABASE_URL",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "RESET_PASSWORD_CALLBACK_URL",
    "EMAIL_VERIFICATION_CALLBACK_URL", 
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET", 
    "EMAIL_FROM",
    "RESEND_API_KEY",
    "POSTGRES_URL",
    "POSTGRES_PRISMA_URL",
    "DATABASE_URL_UNPOOLED",
    "POSTGRES_URL_NON_POOLING",
    "PGHOST",
    "POSTGRES_USER",
    "STACK_SECRET_SERVER_KEY",
    "POSTGRES_PASSWORD",
    "POSTGRES_DATABASE",
    "PGPASSWORD",
    "PGDATABASE",
    "PGHOST_UNPOOLED",
    "PGUSER",
    "POSTGRES_URL_NO_SSL",
    "POSTGRES_HOST"
  ]
}
