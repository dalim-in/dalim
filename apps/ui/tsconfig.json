{ 
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/.source": ["./.source/index.ts"],
      "@/*": ["./*"],
      "react": ["./node_modules/@types/react"],
      "@dalim/core/*": ["../../packages/core/src/*"]
    }
  },
  "include": [
    "./next-env.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/build-registry.mts",
    "next.config.mjs"
, "registry/default/blocks/hero/hero-01/components/hero"  ],
  "exclude": ["node_modules"]
}
